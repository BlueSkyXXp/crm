    <select id="selectSt02CrmTeamStaticList" parameterType="DailyInterDataReqVo" resultMap="St02CrmTeamStaticResult">
        select dept.dept_name, user.user_name, user.dept_id,
        sum(CASE WHEN level = 0 THEN 1 ELSE 0 END) AS level0_cnt,
        ROUND((sum(CASE WHEN level = 0 THEN 1 ELSE 0 END) * 100.0 / COUNT(*)), 2) AS level0_percentage,
        sum(CASE WHEN level = 1 THEN 1 ELSE 0 END) AS level1_cnt,
        ROUND((sum(CASE WHEN level = 1 THEN 1 ELSE 0 END) * 100.0 / COUNT(*)), 2) AS level1_percentage,
        sum(CASE WHEN level = 2 THEN 1 ELSE 0 END) AS level2_cnt,
        ROUND((sum(CASE WHEN level = 2 THEN 1 ELSE 0 END) * 100.0 / COUNT(*)), 2) AS level2_percentage,
        sum(CASE WHEN level = 3 THEN 1 ELSE 0 END) AS level3_cnt,
        ROUND((sum(CASE WHEN level = 3 THEN 1 ELSE 0 END) * 100.0 / COUNT(*)), 2) AS level3_percentage,
        sum(CASE WHEN level = 4 THEN 1 ELSE 0 END) AS level4_cnt,
        ROUND((sum(CASE WHEN level = 4 THEN 1 ELSE 0 END) * 100.0 / COUNT(*)), 2) AS level4_percentage,
        sum(CASE WHEN level = 5 THEN 1 ELSE 0 END) AS level5_cnt,
        ROUND((sum(CASE WHEN level = 5 THEN 1 ELSE 0 END) * 100.0 / COUNT(*)), 2) AS level5_percentage,
        count(1) as cnt
        from st02_crm_customer customer, sys_dept dept, sys_user user, st02_crm_customer_flow_info flow
        <where>
            user.user_id = customer.user_id and user.dept_id = dept.dept_id
            and customer.id = flow.customer_id and flow.source_plat = 'API'
            <if test="deptId != null  and deptId != ''"> and dept.dept_id = #{deptId}</if>
            <if test="source != null  and source != ''"> and customer.source = #{source}</if>
            and customer.create_time  &gt;= #{startTime} and customer.create_time &lt;= #{endTime} and
            customer.user_id is not null
        </where>
        group by customer.user_id
    </select>


